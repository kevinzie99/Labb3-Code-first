<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3"
        xmlns:views="clr-namespace:Labb3.Views"
        xmlns:viewmodels="clr-namespace:Labb3.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" 
                Command="{Binding ConfigurationViewModel.OpenPackOptionsCommand}" />
        <KeyBinding Key="P" Modifiers="Control" 
                Command="{Binding ShowPlayerViewCommand}" />
        <KeyBinding Key="E" Modifiers="Control" 
                Command="{Binding ShowConfigurationViewCommand}" />
        <KeyBinding Key="Enter" Modifiers="Alt" 
                Command="{Binding ToggleFullscreenCommand}" />
    </Window.InputBindings>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ConfigurationViewModel}">
            <views:ConfigurationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PlayerViewModel}">
            <views:PlayerView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0" />

       
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
        
        
    </Grid>
    
</Window>