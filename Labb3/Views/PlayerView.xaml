<UserControl x:Class="Labb3.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

    
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,20,20,0" Grid.Row="0">
            <TextBlock x:Name="TimerText" Text="{Binding TimeLeft}" FontSize="28" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel x:Name="QuizPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <TextBlock Text="{Binding CurrentQuestion.Query}" FontSize="28" HorizontalAlignment="Center" 
                       TextWrapping="Wrap" MaxWidth="600" />
            <TextBlock FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Question {0} of {1}">
                        <Binding Path="QuestionNumber" />
                        <Binding Path="TotalQuestions" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <Grid Margin="0,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="Button1" Content="{Binding ShuffledAnswers[0]}" Grid.Column="0" Grid.Row="0" Height="80" Width="220" Margin="10"
        Command="{Binding AnswerCommand}" CommandParameter="{Binding ShuffledAnswers[0]}"/>
                <Button x:Name="Button2" Content="{Binding ShuffledAnswers[1]}" Grid.Column="1" Grid.Row="0" Height="80" Width="220" Margin="10"
        Command="{Binding AnswerCommand}" CommandParameter="{Binding ShuffledAnswers[1]}"/>
                <Button x:Name="Button3" Content="{Binding ShuffledAnswers[2]}" Grid.Column="1" Grid.Row="1" Height="80" Width="220" Margin="10"
        Command="{Binding AnswerCommand}" CommandParameter="{Binding ShuffledAnswers[2]}"/>
                <Button x:Name="Button4" Content="{Binding ShuffledAnswers[3]}" Grid.Column="0" Grid.Row="1" Height="80" Width="220" Margin="10"
        Command="{Binding AnswerCommand}" CommandParameter="{Binding ShuffledAnswers[3]}"/>
            </Grid>
        </StackPanel>

    
        <StackPanel x:Name="ResultsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Visibility="Collapsed">
            <TextBlock Text="Complete!" FontSize="28"  HorizontalAlignment="Center"/>
            <TextBlock FontSize="16" HorizontalAlignment="Center" Margin="20">
                <TextBlock.Text>
                    <MultiBinding StringFormat="You got {0} out of {1} answers correct!">
                        <Binding Path="Score" />
                        <Binding Path="TotalQuestions" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <Button Command="{Binding RestartQuizCommand}" Height="30" Width="100" FontSize="16">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="Refresh" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Restart!" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>