<UserControl x:Class="Labb3.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem Header="_New Question Pack" Icon="{fa:Icon Folderplus}" 
          Command="{Binding DataContext.NewPackCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
            <MenuItem Header="_Select Question Pack" Icon="{fa:Icon Folderopen}" 
          ItemsSource="{Binding DataContext.Packs, RelativeSource={RelativeSource AncestorType=Window}}">
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Command" Value="{Binding DataContext.SelectPackCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <Setter Property="CommandParameter" Value="{Binding}"/>
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Difficulty, StringFormat='Difficulty: {0}'}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            <MenuItem Header="_Delete Question Pack" Icon="{fa:Icon Folderminus}" 
          Command="{Binding DataContext.DeletePackCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Separator />
            <MenuItem Header="_Import Questions" Icon="{fa:Icon Cloudarrowdown}" InputGestureText="Ctrl+I" />
            <Separator />
            <MenuItem Header="E_xit" Icon="{fa:Icon DoorOpen}" InputGestureText="Alt+F4"
          Command="{Binding DataContext.ExitCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        </MenuItem>

        <MenuItem Header="Edit">
            <MenuItem Header="Add Question" Icon="{fa:Icon Plus}" InputGestureText="Insert"
              Command="{Binding DataContext.ConfigurationViewModel.AddQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <MenuItem Header="Remove Question" InputGestureText="Delete" Icon="{fa:Icon Minus}"
              Command="{Binding DataContext.ConfigurationViewModel.RemoveQuestionCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <MenuItem Header="Pack Options" Icon="{fa:Icon Sliders}" InputGestureText="Ctrl+O" 
              Command="{Binding DataContext.ConfigurationViewModel.OpenPackOptionsCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        </MenuItem>

        <MenuItem Header="View">
            <MenuItem Header="Play" Icon="{fa:Icon Play}" InputGestureText="Ctrl+P"
                      Command="{Binding DataContext.ShowPlayerViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
            <MenuItem Header="Edit" Icon="{fa:Icon Gears}" InputGestureText="Ctrl+E" 
                      Command="{Binding DataContext.ShowConfigurationViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Separator />
            <MenuItem Header="Fullscreen" Icon="{fa:Icon Expand}" InputGestureText="Alt+Enter"
          Command="{Binding DataContext.ToggleFullscreenCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        </MenuItem>
        
    </Menu>
</UserControl>
